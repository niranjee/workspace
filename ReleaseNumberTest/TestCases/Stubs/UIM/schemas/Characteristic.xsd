--><schema xmlns="http://www.w3.org/2001/XMLSchema" xmlns:invchar="http://xmlns.oracle.com/communications/inventory/webservice/characteristic" xmlns:invcom="http://xmlns.oracle.com/communications/inventory/webservice/common" xmlns:invfault="http://xmlns.oracle.com/communications/inventory/webservice/fault" xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:xsd="http://www.w3.org/2001/XMLSchema" targetNamespace="http://xmlns.oracle.com/communications/inventory/webservice/characteristic">

    <!--  =================== Imports Start ==================== -->
    <!-- Local Imports -->
    <import namespace="http://xmlns.oracle.com/communications/inventory/webservice/common" schemaLocation="../referenceSchemas/InventoryCommon.xsd"/>
    <import namespace="http://xmlns.oracle.com/communications/inventory/webservice/fault" schemaLocation="../referenceSchemas/InventoryFaults.xsd"/>

    <complexType name="CharacteristicType">
		<xs:annotation>
			<xs:documentation>CharacteristicType holds the characteristics information of an entity.</xs:documentation>
		</xs:annotation>     
        <complexContent>
            <extension base="invcom:CharacteristicDataValueType">
                <!-- this is supposed to be a restriction not an extension -->
                <sequence>
                </sequence>
            </extension>
        </complexContent>
    </complexType>
    <complexType name="CharacteristicDataType">
    		<xs:annotation>
			<xs:documentation>CharacteristicType holds the characteristics information of an entity.This type must be used only 
			when the request is for add/modify/delete a characteristic.</xs:documentation>
		</xs:annotation>
        <complexContent>
            <extension base="invchar:CharacteristicType">
                <sequence>
					<xs:annotation>
						<xs:documentation>characteristicAction holds the characteristics Action which basically indicate whether a characteristic needs to be added/deleted/updated. Valid values for this element are defined by CharacteristicActionEnum.</xs:documentation>
					</xs:annotation>                
                    <element name="characteristicAction" type="invchar:CharacteristicActionEnum"/>
                </sequence>
            </extension>
        </complexContent>
    </complexType>
    <simpleType name="CharacteristicActionEnum">
		<xs:annotation>
			<xs:documentation>CharacteristicActionEnum holds valid values for characteristicAction</xs:documentation>
		</xs:annotation>     
        <restriction base="xsd:string">
            <enumeration value="add"/>
            <enumeration value="update"/>
            <enumeration value="delete"/>
        </restriction>
    </simpleType>
    
</schema>
